
  <h2>What's happening now</h2>  
  <%=  link_to "+", new_status_path, class: "addStatusBtn" %>

  <% @statuses.each do |status| %>
  <div class="status">
      <strong><%= status.name %></strong>
      <p><%= status.content %></p>
      <div class="meta">
          <span class="timeago"><%= link_to time_ago_in_words(status.created_at) + " ago", status %></span>
          <span class="admin">

             | <%= link_to "Edit", edit_status_path(status) %> |  
               <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %>

          </span>

      </div>

  </div>

  <% end %>

