<div class="container-fluid upper-padding-fix">

  <div class="row">

    <div class="col-xs-12 col-sm-6 col-md-8"></div>
      
    <div id="status-column" class="col-xs-6 col-md-4">

  <h2>What's happening now</h2>  
  <%=  link_to "+", new_status_path, class: "addStatusBtn" %>

    <% @statuses.each do |status| %>
    <div class="status">
        <strong><%= status.name %></strong>
        <p><%= status.content %></p>
        <div class="meta">
            <span class="timeago"><%= link_to time_ago_in_words(status.created_at) + " ago", status %></span>
            <span class="admin">

               | <%= link_to "Edit", edit_status_path(status) %> |  
                 <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %>

            </span>

        </div>

      </div>
    </div>
  </div>

</div>
<div id="sidr-right">
  <div id="right-menu">
    <ul>
      <li><%= link_to "What's going on now", statuses_path %></li>
    </ul>
  </div>
</div>

    <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
    <% end %>

